{
    "name": "cron_cal_wasm",
    "version": "0.1.0",
    "private": true,
    "devDependencies": {
        "@html-eslint/eslint-plugin": "^0.13.1",
        "@html-eslint/parser": "^0.13.1",
        "eslint": "^8.12.0",
        "eslint-plugin-html": "^6.2.0",
        "http-server": "^14.1.0",
        "npm-run-all": "^4.1.5"
    },
    "scripts": {
        "lint": "eslint index.html",
        "build:wasm": "wasm-pack build --target web --no-typescript",
        "build:post": "rm -rf public && cp -r pkg public && cp ./index.html public/ && rm public/.gitignore public/README.md public/package.json",
        "build": "run-s build:wasm build:post",
        "start": "cd public && http-server -o"
    }
}
